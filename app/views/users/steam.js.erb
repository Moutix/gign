<% if params[:append] && @games.current_page >= @games.total_pages %>
  $('#view-more a').hide().removeAttr('href');
<% else %>
  $('#view-more a').show().attr('href', '<%= steam_user_path(@user, page: @games.current_page + 1, append: 'miku', q: params[:q], sort_order: params[:sort_order], sort_field: params[:sort_field]) %>');
<% end %>

<%if params[:append]%>
  $('#game-table').append("<%=j render 'tr_games_list', games: @games, format: 'html' %>");
<%else%>
  $('#game-table').remove();
  $('#content').append("<%=j render 'games_list', games: @games, format: 'html' %>"); 
<%end%>
