<% if @games.current_page >= @games.total_pages %>
  $('#view-more a').hide().removeAttr('href');
<% else %>
  $('#view-more a').show().attr('href', '<%= steam_user_path(@user, page: @games.current_page + 1, append: 'miku') %>');
<% end %>

<%if params[:act]%>
  $('#game-table').remove();
  $('#content').append("<%=j render 'games_list', games: @games, format: 'html' %>"); 
<%elsif params[:append] && params[:q].blank?%>
  $('#game-table').append("<%=j render 'tr_games_list', games: @games, format: 'html' %>");
<%end%>
