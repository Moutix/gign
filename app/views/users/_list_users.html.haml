-model_class = Group

%table.table.table-striped
  %tr
    %th= model_class.human_attribute_name(:email)
    %th= model_class.human_attribute_name(:created_at)
    %th= t '.actions', :default => t("helpers.actions")

  - users.each do |user|
    %tr[user]
      %td= link_to user.email, user
      %td= user.created_at.to_s(:pretty)
      %td
        - if params[:controller] == 'groups' && group && (can? :del_user, group)
          = link_to t("group.del_user.links"), del_user_group_path(group, user), method: :post, class: 'btn btn-xs btn-danger'
        -else
          = link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_path(user), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")),
                        user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' 
      
