= render 'shared/errors_messages', resource: promotion
#Modal.modal.fade[promotion]{"aria-hidden" => "true", "tabindex" => "-1"}
  = form_for promotion do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"data-dismiss" => "modal"}
            %span{"aria-hidden" => "true"}Ã—
            %span.sr-only
              = t("helpers.links.close")
          %h4.modal-title= t("form.promotion.title")
        .modal-body
          .form-group
            = f.label :year
            = f.number_field :year, class: 'form-control', required: ''
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :description
            = f.text_area :description, class: 'form-control'
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal"}
              = t("helpers.links.close")
            = f.submit t('.save', :default => t("helpers.links.save")), :class => 'btn btn-primary'
