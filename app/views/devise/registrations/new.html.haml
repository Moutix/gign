.border-form-div
  %h2 Inscription
    
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    
    = f.email_field :email, autofocus: true, placeholder: 'Adresse mail', class: 'form-control'
    = f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe', class: 'form-control'
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmation', class: 'form-control'
    = f.submit "S'inscrire", class: 'btn btn-primary'

  = render "devise/shared/links"
