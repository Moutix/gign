= render 'shared/errors_messages', resource: resource
.border-form-div
  %h2= t("devise.shared.sign_up")
    
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    
    = f.email_field :email, autofocus: true, placeholder: t("form.devise.registration.email"), class: 'form-control'
    = f.password_field :password, autocomplete: "off", placeholder: t("form.devise.registration.password"), class: 'form-control'
    = f.password_field :password_confirmation, autocomplete: "off", placeholder: t("form.devise.registration.password_confirmation"), class: 'form-control'
    = f.submit t("form.devise.registration.submit"), class: 'btn btn-primary'

  = render "devise/shared/links"
