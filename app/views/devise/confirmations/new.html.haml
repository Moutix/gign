= render 'shared/errors_messages', resource: resource
.border-form-div
  %h2= t("devise.shared.confirmation")

  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|

    = f.email_field :email, autofocus: true, placeholder: t("form.devise.confirmation.email")

    = f.submit t("form.devise.confirmation.submit"), class: 'btn btn-primary'

  = render "devise/shared/links"
