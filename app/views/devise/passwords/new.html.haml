= render 'shared/errors_messages', resource: resource
.border-form-div
  %h2= t("devise.shared.forgot_password")

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|

    = f.email_field :email, autofocus: true, placeholder: t("form.devise.forgot_password.email")

    = f.submit t("form.devise.forgot_password.submit"), class: 'btn btn-primary'
  
  = render "devise/shared/links"
