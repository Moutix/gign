- model_class = Supply
%h1= t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %tr
    %th= model_class.human_attribute_name(:name)
    %th= model_class.human_attribute_name(:price)
    %th= model_class.human_attribute_name(:loanable)
    %th= model_class.human_attribute_name(:description)
    %th= t '.actions', :default => t("helpers.actions")

  - @supplies.each do |supply|
    %tr
      %td= link_to supply.name, supply
      %td= number_to_currency(supply.price)
      %td= supply.loanable
      %td= supply.description
      %td 
        = link_to t('.edit', :default => t("helpers.links.edit")),
            edit_supply_path(supply), :class => 'btn btn-default btn-xs'
        = link_to t('.destroy', :default => t("helpers.links.destroy")),
                      supply_path(supply),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' 
      
%br

= link_to t('.new', :default => t("helpers.links.new"), :name => model_class.model_name.human.titleize),
            new_supply_path,
            :class => 'btn btn-primary'
