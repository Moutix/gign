- model_class = Borrowing
%h1= t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %tr
    %th= model_class.human_attribute_name(:created_at)
    %th= t '.actions', :default => t("helpers.actions")

  - @borrowings.each do |borrowing|
    %tr[borrowing]
      %td= borrowing.created_at.to_s(:pretty)
      %td 
        = link_to t('.edit', :default => t("helpers.links.edit")),
              edit_borrowing_path(borrowing), :class => 'btn btn-default btn-xs'
        = link_to t('.destroy', :default => t("helpers.links.destroy")),
                        borrowing_path(borrowing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' 
      
%br

= link_to t('.new', :default => t("helpers.links.new"), name: model_class.model_name.human),
            new_borrowing_path,
            :class => 'btn btn-primary'
