= render 'dedicated_servers/name_server', server: @dedicated_server

- if !@dedicated_server.lan_parties.empty?
  %hr
  = render 'lan_parties/list', parties: @dedicated_server.lan_parties.order(game_scanner: :asc)

%hr

- if @dedicated_server.have_snmp
  %i.pull-right
    Last check :
    = l @dedicated_server.last_check, format: :default
  .row
    .col-md-6
      = render 'dedicated_servers/system', server: @dedicated_server
    .col-md-6
      = render 'dedicated_servers/cpu_info', server: @dedicated_server
  = render "shared/charts_percentage", title: "CPU activity", data: {"CPU (%)" => @dedicated_server.snmp_stats.pluck(:created_at, :cpu_five_minutes).map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*100).to_i]}}

  .row
    .col-md-6
      = render 'dedicated_servers/memory', free: @dedicated_server.ram_free_space*1024, total: @dedicated_server.ram_total_space*1024, title: "RAM"
    .col-md-6
      = render 'dedicated_servers/memory', free: @dedicated_server.swap_free_space*1024, total: @dedicated_server.swap_total_space*1024, title: "SWAP"

  = render 'dedicated_servers/memory', free: @dedicated_server.disk_free_space*1024, total: @dedicated_server.disk_total_space*1024, title: "DISK"

= render "shared/charts_memory", title: "RAM Usage", ytitle: "Ram Usage", total_memories: @dedicated_server.snmp_stats.pluck(:created_at, :ram_total_space).map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}, used_memories: @dedicated_server.snmp_stats.pluck(:created_at, "(ram_total_space - ram_free_space)").map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}
= render "shared/charts_memory", title: "SWAP Usage", ytitle: "SWAP Usage", total_memories: @dedicated_server.snmp_stats.pluck(:created_at, :swap_total_space).map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}, used_memories: @dedicated_server.snmp_stats.pluck(:created_at, "(swap_total_space - swap_free_space)").map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}
= render "shared/charts_memory", title: "DISK Usage", ytitle: "DISK Usage", total_memories: @dedicated_server.snmp_stats.pluck(:created_at, :disk_total_space).map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}, used_memories: @dedicated_server.snmp_stats.pluck(:created_at, "(disk_total_space - disk_free_space)").map{|a, b| [(a.to_i+a.utc_offset)*1000, (b*1024)]}
- if can? :destroy, @dedicated_server
  .form-actions.pull-right
    %button.btn.btn-primary{"data-toggle" => "modal", "data-target" => "#Modal_dedicated_server_#{@dedicated_server.id}"}
      = t("helpers.links.edit")
    = render 'form', dedicated_server: @dedicated_server

    = link_to t('.destroy', :default => t("helpers.links.destroy")),
                dedicated_server_path(@dedicated_server),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' 


