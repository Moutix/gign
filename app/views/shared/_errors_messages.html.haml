- if !resource.errors.full_messages.empty?

  - msg = content_tag(:ul, resource.errors.full_messages.map { |msg| content_tag(:li, msg.html_safe) }.join.html_safe)

  %script
    $(function(){
    $.pnotify({
    title: "#{t("errors.messages.not_saved", count: resource.errors.full_messages.size, resource: resource.class.model_name.human)}",
    text: "#{msg.html_safe}",
    type: 'error',
    nonblock: {
    nonblock: true,
    nonblock_opacity: .2
    },
    animation: 'fade'
    });
    });

